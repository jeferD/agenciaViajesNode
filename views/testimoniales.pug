extends ./layout/index

block contenido 
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
            //- p= JSON.stringify(testimoniales)//datos de la base de datos testimoniales
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias...
        include ./layout/bloque_testimoniales
        .row

            //- p= JSON.stringify(errores)
            .col-md-12
                h2.d-block.w-100.text-center Agregar un testimonial.

                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center.mt-2= error.mensaje
                

            .row.justify-content-center.col    
                .col-md-8
                    form(action="/testimoniales", method="post") 
                        .form.group 
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control",value=nombre)
                        .form.group 
                            label(for="correo") Correo electronico 
                            input#correo(type="text", placeholder="Tu correo", name="correo", class="form-control", value=correo)
                        .form.group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje(placeholder="Tu mensaje", name="mensaje", class="form-control", rows=3)= mensaje
                        input.btn.btn-success.btn-block.mt-3(type="submit")